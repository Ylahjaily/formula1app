{% extends 'base.html.twig' %}

{% block title %}Title index{% endblock %}

{% block body %}
    <h1>Constuctor titles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Season</th>
                <th>Constructor</th>
                <th>Points</th>
                <th>Wins</th>
                <th>Round</th>
            </tr>
        </thead>
        <tbody>
        {% for title in titles %}
            <tr>
                <td>{{ title.season }}</td>
                <td>{{ title.constructor.name }}</td>
                <td>{{ title.points }}</td>
                <td>{{ title.wins }}</td>
                <td>{{ title.round }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
