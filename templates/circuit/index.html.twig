{% extends 'base.html.twig' %}

{% block title %}Circuit index{% endblock %}

{% block body %}
    <h1>Circuit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Locality</th>
                <th>Name</th>
                <th>Country</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for circuit in circuits %}
            <tr>
                <td>{{ circuit.id }}</td>
                <td>{{ circuit.locality }}</td>
                <td>{{ circuit.name }}</td>
                <td>{{ circuit.country }}</td>
                <td>
                    <a href="{{ path('circuit_show', {'id': circuit.id}) }}">show</a>
                    <a href="{{ path('circuit_edit', {'id': circuit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('circuit_new') }}">Create new</a>
{% endblock %}
