{% extends 'base.html.twig' %}

{% block title %}Constructor index{% endblock %}

{% block body %}
    <h1>Les constructeurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Pays</th>
            </tr>
        </thead>
        <tbody>
        {% for constructor in constructors %}
            <tr>
                <td>{{ constructor.name }}</td>
                <td>{{ constructor.nationality }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
